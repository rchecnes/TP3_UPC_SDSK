
@{
    ViewBag.Title = "Nuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.TitlePag = "Editar Base de Conocimiento";
}

<div class="row">
    <div class="col-lg-12">
        <div class="box box-primary">

            <!-- form start -->
            <form role="form">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-1 col-md-2 col-sm-3 col-xs-3">
                            <div class="form-group">
                                <label for="codigo">Código</label>
                                <input type="text" class="form-control" id="nombre" placeholder="Nombre" value="10" disabled style="text-align: center">
                            </div>
                        </div>
                        <div class="col-lg-11 col-sm-10 col-sm-9 col-xs-9">
                            <div class="form-group">
                                <label for="nombre">Nombre</label>
                                <input type="text" class="form-control" id="nombre" placeholder="Nombre" value="Instalación de Skype Empresarial">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Descripción de la solución</label>
                                <textarea class="form-control" rows="3" placeholder="Enter ...">Prueba vdv dv df vdf vdf  d v dfv d</textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Palabras Claves</label>
                                <textarea class="form-control" rows="2" placeholder="Enter ...">Palabra clave</textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Categoría</label>
                                <select class="form-control">
                                    <option>Impresora</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Problema</label>
                                <select class="form-control">
                                    <option>Office</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label for="exampleInputFile">Documento Adjunto</label>
                                <input type="file" id="exampleInputFile">
                                <p><b>Manual.xls</b></p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Comentario</label>
                                <textarea class="form-control" rows="2" placeholder="Enter ...">Prueba de comentarios</textarea>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.box-body -->

                <div class="box-footer" style="text-align: center">
                    <button type="submit" class="btn btn-primary btn-lg">Grabar</button>&nbsp;&nbsp;&nbsp;&nbsp;
                    <button type="submit" class="btn btn-default btn-lg">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>



@{
    ViewBag.Title = "Nuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.TitlePag = "Nuevo Base de Conocimiento";
}

<div class="row">
    <div class="col-lg-12">
        <div class="box box-primary">
            
            <!-- form start -->
            <form role="form" id="form_tipo_solucion">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label for="nombre">Nombre</label>
                                <input type="text" class="form-control" id="SOL_Nombre" name="SOL_Nombre" placeholder="Nombre" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Descripción de la solución</label>
                                <textarea class="form-control" rows="3" placeholder="Enter ..." id="SOL_Descripcion" name="SOL_Descripcion"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Palabras Claves</label>
                                <textarea class="form-control" rows="2" placeholder="Enter ..." id="SOL_PalabraClave" name="SOL_PalabraClave"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Categoría</label>
                                <select class="form-control" id="SOL_CAT_ID" name="SOL_CAT_ID" required>
                                    <option value="">[Sleccionar]</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label>Problema</label>
                                <select class="form-control" id="SOL_PROB_ID" name="SOL_PROB_ID" required>
                                    <option value="">[Sleccionar]</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label for="exampleInputFile">Documento Adjunto</label>
                                <input type="file" id="SOL_NombreArchivo">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>Comentario</label>
                                <textarea class="form-control" rows="2" placeholder="Enter ..." id="SOL_Comentario" name="SOL_Comentario"></textarea>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.box-body -->

                <div class="box-footer" style="text-align: center;">
                    <button type="submit" class="btn btn-primary btn-lg">Grabar</button>&nbsp;&nbsp;&nbsp;&nbsp;
                    <button type="submit" class="btn btn-default btn-lg">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</div>

